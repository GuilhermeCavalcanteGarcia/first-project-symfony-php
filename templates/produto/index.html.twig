{% extends 'base.html.twig' %}
{% block title %}{{titulo}}{% endblock %}
{% block body %}
<center>
    <h1 class="p-3">{{titulo}}</h1>
</center>
<div class="container d-flex justify-content-between p-3 bg-dark">

    <a href="{{ path('produto_adicionar') }}" class="btn btn-primary align-self-center">+ Adicionar</a>

    <form method="get" class="py-4">

        <div class="d-flex justify-content-between">

            <input type="text" name="nome" class="form-control align-self-center" value="{{ nomeproduto }}"/>
            <button type="submit" class="btn btn-primary align-self-center">Pesquisar</button>

        </div>  
          
    </form>

</div>
<table class="table table-dark table-striped table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>NOME</td>
            <td>VALOR</td>
            <td>CATEGORIA</td>
            <td>AÇÕES</td>
        </tr>
    </thead>
    <tbody>
        {% for produto in produtos %}
            <tr>
                <td>{{produto.id}}</td>
                <td>{{produto.nomeproduto}}</td>
                <td>R$ {{produto.valor}}</td>
                <td>{{produto.categoria.descricaocategoria}}</td>
                <td>
                    <a href="{{ path("produto_editar", {id: produto.id}) }}" class="btn btn-primary">Editar</a>
                    <a href="{{ path("produto_excluir", {id: produto.id}) }}" class="btn btn-primary">Excluir</a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
